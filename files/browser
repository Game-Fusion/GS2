local function render()
term.setBackgroundColour(colours.white)
term.clear()
term.setBackgroundColour(colours.grey)
term.setCursorPos(1,1)
term.clearLine()
center(1,"GameStation 2")
term.setCursorPos(1,3)
print("  Games    ")
print("  Info     ")
print("  Strafe   ")
print("  Install  ")
print("  Shutdown ")

  while true do render()
  local evt, button, x, y = os.pullEvent("mouse_click")
  if y == 3 then shell.run("/GS2/Games")
  elseif y == 4 then shell.run("/GS2/Info")
  elseif y == 5 then shell.run("/GS2/Strafe")
  elseif y == 6 then shell.run("/GS2/Disk")
  elseif y == 7 then shell.run("/GS2/Vinyl")
  elseif y == 8 then term.setBackgroundColour(colours.white)
  term.clear()
  center(8,"Shutting Down...")
  sleep(0.7)
  term.setBackgroundColour(colours.lightGrey)
  term.clear()
  sleep(0.25)
  term.setBackgroundColour(colours.grey)
  term.clear()
  sleep(0.2)
  os.shutdown()
  else end
  end
