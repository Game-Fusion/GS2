os.loadAPI("/GS2/APIs/gs")
os.loadAPI("/GS2/APIs/ee")

if peripheral.find("monitor") then
  ee.shRun("monitor right startup")
  ee.shRun("monitor left startup")
  ee.shRun("monitor top startup")
  ee.shRun("monitor bottom startup")
  ee.shRun("monitor front startup")
  ee.shRun("monitor back startup")

elseif not term.isColour then
  gs.setTxt("black")
  gs.clrBg("white")
  gs.centerSlow(8,"Whoops!")
  ee.sleep(1)
  gs.center(10,"GameStation 2 doesn't support monochrome computers!")
  gs.center(11,"(yet)")
  ee.sleep(3)
  gs.clrBg("black")
  gs.cursPos(1,1)
  error("Monochrome not supported yet")
          
else 
  gs.setTxt("white")
  gs.clrBg("red")
  gs.centerSlow(6,"Game Fusion Presents...")
  ee.sleep(1.5)
  gs.clr()
  gs.centerSlow(6,"GameStation 2.")
  ee.sleep(1)
  gs.center(7,"The ultimate CC console.")
  ee.sleep(2.25)
  ee.shRun("/GS2/Browser")
end
