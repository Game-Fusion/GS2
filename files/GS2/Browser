local version = 2.0

os.loadAPI("/GS2/APIs/gs")
--os.loadAPI("/GS2/APIs/ee") --unused

local function powerOff()
  gs.setTxt("white")
  gs.clrBg("grey")
  gs.cursPos(1,8)
  gs.center(8,"Shutting Down...")
  sleep(1)
  gs.clrBg("lightGrey")
  sleep(0.2)
  gs.clrBg("white")
  sleep(0.1)
  os.shutdown()
end

local function gamesApps()
  gs.clrBg("blue")
  gs.cursPos(1,1)
  gs.setTxt("white")

while true do
  programs = fs.list("/GS2/GamesApps")
  gs.cursPos(1,1)
  gs.clr()
  for i=1,#programs do
    gs.setTxt("white")
    gs.cursPos(1,i-scroll)
    print(programs[i])
  end
  
  if #programs == 0 then
    gs.setTxt("white")
    gs.cursPos(1,1)
    print("You have no games.")
  end
  
  gs.cursPos(1,19)
  gs.setTxt("white")
  write("Click a program to run it. Space to exit.")
  
  os.startTimer(0.3)
  event,a,b,c,d = os.pullEvent()
  if (event == "key" and a == 57) then
  menu()
  break
end
  
  if event == "mouse_scroll" then
    scroll = scroll + a
      if scroll > 0 then
        scroll = 0
      end
    end
    
  if event == "mouse_click" then
    if c <= #programs then
    c = c - scroll
    print(programs[c])
    gs.setTxt("white")
    gs.clr()
    gs.cursPos(1,1)
    shell.run("/GS2/GamesApps/"..programs[c])
    end
  end
end
end

local function systemInfo()
  gs.clrBg("red")
  gs.setTxt("white")
  gs.center(2,"Information")
  gs.center(4,"GS2 Model: GS2 SCPH-50000")
  gs.center(5,"Software version: v2.0")
  gs.center(7,"Credits:")
  gs.center(9,"Programming: TheMrIron2")
  gs.center(10,"Programming: Funey")
  gs.center(11,"Strafe: CrazedProgrammer")
  gs.center(14,"Thank you for using your GS2!")
  gs.center(16,"Click here to go back")

while true do
  local evt, button, x, y = os.pullEvent("mouse_click")
  if y == 16 then
    menu()
  end
end

local function installDisk()
  gs.clrBg("red")
  gs.setTxt("white")
  
while true do
  if fs.exists("/disk/") then
    gs.center(8,"Installing...")
    shell.run("cp disk/* GS2/GamesApps/")
    gs.center(10,"Installed!")
  else
    gs.center(8,"No disk found!")
    sleep(3)
    menu()
  end
end

local function settings()
  gs.setTxt("white")
  gs.clrBg("green")
  gs.center(2,"System Settings")
  gs.setBg("red")
  gs.center(4," Modify Files ")
  gs.setBg("green")
  gs.center(14,"Click here to Quit")

while true do
  local evt, button, x, y = os.pullEvent()
  if evt == "mouse_click" then
    if y == 4 then
      gs.clr()
      gs.cursPos(1,1)
      shell.run("/rom/programs/shell")
    elseif y == 14 then
      menu()
    end
  end
end

local function updater()
  local w,h = gs.getSize()
  gs.clrBg("red")
  gs.setBg("white")
  gs.cursPos(1,1)
  gs.clrLine()
  gs.setTxtColour("blue")
  gs.center(1,"GameStation 2 Updater v1")
  gs.setBg("red")
  gs.setTxt("white")
  gs.cursPos(1,3)
  print("   Install")
  print("   Exit")
  gs.center(7,"To update, get an official GS2 update")
  gs.center(8,"disk and press 'Install'.")

while true do local evt, button, x, y = os.pullEvent("mouse_click")
  if y == 3 then
    if not fs.exists("/disk/.flashUpdate/") then  -- Used for disk updates or other purposes to install code
    gs.center(8,"Invalid Disk!")
    menu()
  elseif fs.exists("disk/boot.elf") then
    shell.run("disk/boot.elf")
  
  elseif fs.exists("/disk/.flashUpdate/") then
    shell.run("/disk/.flashUpdate/boot.elf")
    gs.clr()
    gs.centerSlow(8,"Installed!")
    sleep(1)
    menu()
   elseif y == 4 then menu()
    else end
     end
    end
   end
  end
  
local function menu()
  gs.clrBg("red")
  gs.setCursorPos(1,1)
  gs.setBg("white")
  gs.clrLine()
  gs.setTxt("red")
  gs.center(1,"GameStation 2 Browser")
  gs.setBg("red")
  gs.cursPos(1,3)
  gs.setTxt("blue")
  gs.setBg("white")
  gs.center(3," Games and Apps ")
  gs.center(5," Install ")
  gs.center(7," Strafe ")
  gs.center(9," Shutdown ")
  gs.center(11," Information ")
  gs.center(13," Settings ")
  gs.center(15," Software Update ")
  
  while true do
    local _,_,_,y = os.pullEvent("mouse_click")
    if y == 3 then
      gamesApps()
    elseif y == 5 then
      installDisk()
    elseif y == 7 then
      shell.run("pastebin run bj3qj1Pj")
    elseif y == 9 then
      powerOff()
    elseif y == 11 then
      systemInfo()
    elseif y == 13 then
      settings()
    elseif y == 15 then
      updater()
    end
  end
end

menu()
